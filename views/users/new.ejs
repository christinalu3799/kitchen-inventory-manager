<%- include('../partials/header.ejs') %>

<div class="main" id="register">

    <h1>Restaurant Inventory Manager</h1>
    <hero>
        <div class="icons-container">
            <img src="/images/kitchen.png">
            <img src='/images/fork-and-spoon.png'>
            <img src="/images/food.png">
        </div>
    </hero>

    <div class="register-container"> 
        <h1>Create New Account</h1>
        <form action="/" method="POST">
            <label for="username">Username:</label>
            <input type="text" name="username" id="username">
            
            <label for="password">Password:</label>
            <input type="password" name="password" id="password">

            <input type="submit" value="Register" style="background-color: #f4c736; cursor: pointer; margin: 1rem 0"">
        </form>
        <p>Already have an account?</p>
        <a href="/sessions/login" >Click here to sign in</a>
    </div>

</div>

