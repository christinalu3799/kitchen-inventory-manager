<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>

<div class="main" id="index">
    <h1>Dashboard</h1>
    <div class="summary">
        <h2>SUMMARY</h2>
        <div class="summary-container">
            <div>
                <% let sum = 0 
                items.forEach(item => {
                    sum += item.units
                }) %>  
                <h3><%= sum %> Units</h3>
            </div>
            <div>
                <% let numItems = items.length%>
                <h3><%= numItems %> Items</h3>
            </div>
            <div>
                <% let numRestock = 0
                items.forEach(item => {
                    if(item.units < 3) {
                        numRestock += 1
                    }
                })
                %> 
                <h3><%= numRestock %> Items to Restock</h3>
            </div>      
        </div>
    </div>
    <div class="categories">
        <% for (let i = 0; i < categories.length; i++) { %> 
            <div class="category-card">
                <a href='/inventory/<%= categories[i].category %>'>
                    <div class="category-img">
                        <img src=<%= categories[i].imageURL %> alt=<%= categories[i].category %>>  
                    </div>
                    <h2><%= categories[i].title %></h2>
                </a>
            </div>       
        <% } %> 
    </div>
        
</div>

<%- include('./partials/footer.ejs') %>